    <script type="text/javascript">
        $(".input").focusin(function () {
            $(this).find("span").animate({ "opacity": "0" }, 200);
        });

        $(".input").focusout(function () {
            $(this).find("span").animate({ "opacity": "1" }, 300);
        });

        $(".login").submit(function () {
            $(this).find(".submit i").removeAttr('class').addClass("fa fa-check").css({ "color": "#fff" });
            $(".submit").css({ "background": "#2ecc71", "border-color": "#2ecc71" });
            $(".feedback").show().animate({ "opacity": "1", "bottom": "-80px" }, 400);
            $("input").css({ "border-color": "#2ecc71" });
            return false;
        });

        $("#hbtnInicioSesion").on("click", function (e) {
            e.preventDefault()
            var email = $("#txtEmail").val()
            var password = $("#txtPassword").val()
            sendAjaxRequestLogin(email, password)
        })
        function sendAjaxRequestLogin(email, password) {
            $.ajax({
                url: '../../Usuarios/UsuariosExistsValidation', // URL del controlador y la acción a la que se llama
                type: 'POST', // El tipo de solicitud (puede ser GET, POST, PUT, DELETE, etc.)
                data: { // Los datos que se envían con la solicitud
                    Email: email,
                    Password: password
                },
                success: function (response) { // La función que se ejecuta cuando la solicitud es exitosa
                    // Código para manejar la respuesta del servidor
                    console.log(JSON.stringify(response))
                    if (response == true) {
                        window.location.href = '../../Home/Index';
                    }
                    else{
                    alert("Usuario no registrado")
                    }
                },
                error: function (xhr, status, error) { // La función que se ejecuta cuando ocurre un error
                    // Código para manejar el error
                }
            });
        }

    </script>
