<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookNexus</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/BookNexus.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @await Html.PartialAsync("header.cshtml")
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 order-2 order-lg-1">
                <seccion>
                    <h4 style="margin-top: 40px; text-align:center;">Actividad</h4>
                    <div class="card border-dark  w-100" style="margin-top: 40px;">
                        <div class="card-header">Foros</div>
                        <div class="card-body">
                            <h5 class="card-title">Foros</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                    <div class="card border-dark  w-100" style="margin-top: 40px;">
                        <div class="card-header">Clubes</div>
                        <div class="card-body">
                            <h5 class="card-title">Clubes</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                    <div class="card border-dark  w-100" style="margin-top: 40px;">
                        <div class="card-header">Lecturas</div>
                        <div class="card-body">
                            <h5 class="card-title">Lecturas</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                </seccion>
            </div>
            <div class="col-lg-6 order-1 order-lg-2">
                <main role="main" class="pb-3">
                    <breadcrumb></breadcrumb>
                    @RenderBody()
                </main>
            </div>
            <div class="col-lg-3 order-3">
                <seccion>
                    <h4 style="margin-top: 40px; text-align:center;">Notificaciones</h4>
                    <div class="card border-dark  w-100" style="margin-top: 40px;">
                        <div class="card-header">Foros</div>
                        <div class="card-body">
                            <h5 class="card-title">Foros</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                    <div class="card border-dark  w-100" style="margin-top: 40px;">
                        <div class="card-header">Clubes</div>
                        <div class="card-body">
                            <h5 class="card-title">Clubes</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                    <div class="card w-100" style="margin-top: 40px;">
                        <div class="card-header">Sugerencias</div>
                        <div class="card-body">
                            <h5 class="card-title">Sugerencias</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                            <a href="#" class="btn btn-primary">Button</a>
                        </div>
                    </div>
                </seccion>
            </div>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        @await Html.PartialAsync("footer.cshtml")
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
